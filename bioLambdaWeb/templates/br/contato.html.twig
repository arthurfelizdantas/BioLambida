{% extends 'base.html.twig' %}

{% block title %}Contato - BioLambda{% endblock %}

{% block body %}
<style>
section{
  margin-top:8em;
}

h3{
  text-align:center;
}
form{
  margin-left:20%;
  padding-bottom:10em;
}
label{
  margin-top:1em;
}
input{
  margin:1em 0;
}
#send{
  float:right;
  margin:2em;
}
</style>
  <main>
    <div class="container">
    <section>
      <h3>
      Entre em contato com a gente!
        <a class="pl-3 pr-3" target="_blank" aria-label="Telefone da BioLambda" title="Telefone"class="grey-text text-lighten-3" href="tel:+55113768-5139"><i class="fa fa-phone" aria-hidden="true"></i></a>
        <a class="pl-3 pr-3" target="_blank"aria-label="Whatsapp da BioLambda" title="Whatsapp"class="grey-text text-lighten-3" href="https://bit.ly/2U9e8vI"><span class="icon-whatsapp"></span></a>
        <a class="pl-3 pr-3" target="_blank" aria-label="Email da BioLambda" title="E-mail" class="grey-text text-lighten-3" href="mailto:biolambda@biolambda.com"><i class="fa fa-envelope" aria-hidden="true"></i></a>
      </h3>
    <form id="form">
      <div class="form-group col-9">
        <label for="exampleInputEmail1">Nome</label>
        <input  type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Seu nome">
        <label for="exampleInputEmail1">Endereço de email</label>
        <input type="email" class="form-control .align-self-sm-center" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Seu email">
        <small id="emailHelp" class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
        <label for="message">Mensagem</label>
        <textarea class="form-control" id="message" rows="3"></textarea>
        <button id="send" type="submit"class="btn btn-primary">Enviar</button>
      </div>
    </form>
    
    </div>
    </section>
</main>

{% endblock %}
 